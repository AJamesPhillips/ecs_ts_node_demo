{
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "build",
      "module": "commonjs",
      "target": "esnext",
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": false
    },
    "exclude": [
      "node_modules",
      "build"
    ]
  }
